{
  "name": "canon-guard-scripts",
  "version": "1.0.0",
  "description": "Scripts for Canon Guard",
  "scripts": {
    "isGuardSetup":       "forge script scripts/actions/GuardActions.s.sol:GuardActions --sig isGuardSetup",
    "setupGuard":         "forge script scripts/actions/GuardActions.s.sol:GuardActions --broadcast --account canon-guard-tester --sig setupGuard",
    "removeGuard":        "forge script scripts/actions/GuardActions.s.sol:GuardActions --broadcast --account canon-guard-tester --sig removeGuard",
    "queueTransaction":   "forge script scripts/actions/BasicActions.s.sol:BasicActions --broadcast --account canon-guard-tester --sig queueTransaction",
    "signTransaction":    "forge script scripts/actions/BasicActions.s.sol:BasicActions --broadcast --account canon-guard-tester --sig signTransaction",
    "executeTransaction": "forge script scripts/actions/BasicActions.s.sol:BasicActions --broadcast --account canon-guard-tester --sig executeTransaction",
    "approveTransaction": "forge script scripts/actions/BasicActions.s.sol:BasicActions --broadcast --account canon-guard-tester --sig approveTransaction",
    "approveHub":         "forge script scripts/actions/BasicActions.s.sol:BasicActions --broadcast --account canon-guard-tester --sig approveHub",
    "approveNoAction":    "forge script scripts/actions/ApproveActions.s.sol:ApproveActions --broadcast --account canon-guard-tester --sig approveNoAction",
    "deploySimpleAction": "forge script scripts/actions/SimpleActions.s.sol:SimpleActions --broadcast --account canon-guard-tester --sig deploySimpleAction",
    "deploySimpleTransfer": "forge script scripts/actions/SimpleTransferActions.s.sol:SimpleTransferActions --broadcast --account canon-guard-tester --sig deploySimpleTransfer",
    "deployCappedTokenTransferHub": "forge script scripts/actions/CappedTokenTransferActions.s.sol:CappedTokenTransferActions --broadcast --account canon-guard-tester --sig deployCappedTokenTransfersHub",
    "deployCappedTokenTransfer":    "forge script scripts/actions/CappedTokenTransferActions.s.sol:CappedTokenTransferActions --broadcast --account canon-guard-tester --sig deployCappedTokenTransfer"
  },
  "author": "Wonderland",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "dotenv-cli": "^10.0.0"
  }
}
